<h1>Listing data(v2)</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data.each do |datum| %>
      <tr>
        <td><%= datum.title %></td>
        <td><%= datum.category_id %></td>
        <td><%= link_to 'Show', [:v2, datum ] %></td>
        <td><%= link_to 'Edit', edit_v2_datum_path(datum) %></td>
        <td><%= link_to 'Destroy', [ :v2, datum ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Datum', new_v2_datum_path %>
